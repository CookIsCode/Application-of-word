<Page x:Class="Application_of_word.Page.PortAndExport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Application_of_word.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PortandExport">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="35"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DockPanel  LastChildFill="True" ToggleButton.Checked="PortMode_Checked" >
            <Button x:Name="Add" Content="导入" Margin="10,5,10,0" DockPanel.Dock="Right" Click="Add_Click" />
            <Button x:Name="Brower" Content="浏览" Margin="10,5,0,0" DockPanel.Dock="Right" Click="Brower_Click"/>
            <CheckBox x:Name="PortMode1" Content="txt" Margin="10,10,0,0" DockPanel.Dock="Right"/>
            <CheckBox x:Name="PortMode2" Content="欧路词典" Margin="10,10,0,0" DockPanel.Dock="Right"/>
            <CheckBox x:Name="PortMode3" Content="有道词典" IsChecked="True" Margin="10,10,0,0" DockPanel.Dock="Right"/>
            <TextBox x:Name="SelectFileName" Margin="10,5,0,0"  DockPanel.Dock="Left" IsReadOnly="True"/>
        </DockPanel>
        <ComboBox x:Name="SelectSheet" Grid.Row="1" Margin="10,5,10,0" />
        <DataGrid x:Name="DataGridSheet" Grid.Row="2" Margin="10,5,10,5" ItemsSource="{Binding}" AutoGenerateColumns="True"/>
    </Grid>
</Page>
